{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "dist",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "core-js",
      "node",
      "jquery",
      "fullcalendar"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}